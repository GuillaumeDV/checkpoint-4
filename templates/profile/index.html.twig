{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
<div class="container">
    <div class="card">
        <div class="card-body">
            <h1>Bienvenue {{ app.user.email }}</h1>
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        <h2>Statistique et Questions r√©pondues</h2>
                    </div>
                    <div class="col-md-4">
                        <h2>Progression globale : {{ progress }} %</h2>
                    </div>
                </div>
                {% for info in infos %}
                    <div class="container">
                        <div class="card">
                            <div class="card-body">
                                <h3>{{ info.question.name }}</h3>
                                <div class="row">
                                    <div class="col-md-8">
                                        <p> {{ info.question.answer }} </p>
                                    </div>
                                    <div class="col-md-3">
                                        <p> {{ info.question.category.name }} </p>
                                    </div>
                                 </div>
                            </div>
                         </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
